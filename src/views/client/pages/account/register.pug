extends ../../layout/default

block main
    .container.my-5
        .row.justify-content-center
            .col-md-6
                .card.shadow-lg(style="border-radius: 15px;")
                    .card-body
                        h3.card-title.text-center.mb-4 Đăng Ký Tài Khoản

                        form(action="/account/register" method="POST")
                            .form-group.mb-3
                                label(for="fullName") Họ Tên *
                                input#fullName.form-control(
                                    type="text"
                                    name="fullName"
                                    placeholder="Nhập họ tên"
                                    required
                                )

                            .form-group.mb-3
                                label(for="email") Email *
                                input#email.form-control(
                                    type="email"
                                    name="email"
                                    placeholder="Nhập email"
                                    required
                                )

                            .form-group.mb-3.position-relative
                                label(for="password") Mật khẩu *
                                input#password.form-control(
                                    type="password"
                                    name="password"
                                    placeholder="Nhập mật khẩu"
                                    required
                                )
                                // Eye icon for toggling password visibility
                                i.fa-solid.fa-eye.position-absolute(
                                    id="togglePassword"
                                    style="right: 10px; top: 38px; cursor: pointer;"
                                )

                            .form-group.mb-3
                                label(for="confirmPassword") Xác nhận mật khẩu *
                                input#confirmPassword.form-control(
                                    type="password"
                                    placeholder="Xác nhận mật khẩu"
                                    required
                                )
                            // Error message placeholder
                            p#passwordError.text-danger.d-none Mật khẩu không khớp!

                            button.btn.btn-primary.btn-block.w-100.mb-3(type="submit") Đăng Ký

                            a(href="/account/password/forgot" class="text-decoration-none") Quên mật khẩu

                        p.text-center.mt-3
                            | Bạn đã có tài khoản?
                            a(href="/account/login" class="text-decoration-none") Đăng nhập