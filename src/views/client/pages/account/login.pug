extends ../../layout/default

block main
    - if (messages.error)
        .message.info
        div(
            class="alert alert-primary"
            show-alert
            data-time="1500"
        ) #{messages.error} <span close-alert>x</span>
    .container.my-5
        .row.justify-content-center
            .col-md-6
                .card.shadow-lg(style="border-radius: 15px;")
                    .card-body
                        h3.card-title.text-center.mb-4 Đăng nhập Tài Khoản

                        form(action="/account/login" method="POST")
                            .form-group.mb-3
                                label(for="email") Email *
                                input#email.form-control(
                                    type="email"
                                    name="email"
                                    placeholder="Nhập email"
                                    required
                                )

                            .form-group.mb-3.position-relative
                                label(for="password") Mật khẩu *
                                input#password.form-control(
                                    type="password"
                                    name="password"
                                    placeholder="Nhập mật khẩu"
                                    required
                                )
                                // Eye icon for toggling password visibility
                                i.fa-solid.fa-eye.position-absolute(
                                    id="togglePassword"
                                    style="right: 10px; top: 38px; cursor: pointer;"
                                )
                            // Error message placeholder
                            p#passwordError.text-danger.d-none Mật khẩu && tài khoản không khớp!

                            button.btn.btn-primary.btn-block.w-100(type="submit") Đăng nhập

                        p.text-center.mt-3
                            | Bạn chưa có tài khoản?
                            a(href="/account/register" class="text-decoration-none") Đăng ký