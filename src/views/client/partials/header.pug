include ../mixins/sub-menu.pug

mixin header()
    header.header 
        .container 
            .d-flex.justify-content-between.align-items-center
                .inner-menu
                    ul.d-flex
                        li 
                            a(href="/") Trang Chủ
                        li.sub-menu
                            - const pathProduct = "/products";
                            a(href=pathProduct) Sản phẩm
                                +sub-menu(layoutProductsCategory, pathProduct)
                        li 
                            a(href="/about") Giới thiệu
                .inner-logo 
                    a(href="/")
                        img(src="/images/PN.png" alt="logo")
                .inner-menu
                    ul.d-flex
                        li.d-flex.align-items-center
                            i(
                                class="fa-solid fa-magnifying-glass"
                                id="searchIcon"
                                style="cursor: pointer;"
                                onclick="toggleSearch()"
                            )

                            form(
                                action="/search"
                                method="GET"
                                id="searchForm"
                                class="search-form d-flex"
                            )
                                div(class="form-group d-flex mb-0")
                                    input(
                                        type="text"
                                        placeholder="Nhập từ khoá..."
                                        class="form-control search-input"
                                        name="keyword"
                                        value=keyword
                                    )
                                    button(
                                        type="submit"
                                        class="btn btn-primary search-btn ml-2"
                                    ) Tìm
                        li.account-menu.d-flex.align-items-center
                            i(class="fa-solid fa-user")
                            if(user)
                                a(href="/account/info") Tài khoản
                                    ul.dropdown-menu
                                        li
                                            a(href="/account/logout") Đăng xuất
                            else
                                a(href="/account/login") Đăng nhập
                                    ul.dropdown-menu
                                        li
                                            a(href="/account/login") Đăng nhập
                                        li
                                            a(href="/account/register") Đăng ký

                        li
                            i(class="fa-regular fa-heart")
                            a(href="/products") Wishlist           
                        li
                            i(class="fa-solid fa-bag-shopping")
                            a(href="/cart") Cart (#{miniCart ? miniCart.totalQuantity : 0})

    script(src="/js/script.js") 
