include ../mixins/sub-menu.pug

mixin header()
    header.header 
        .container 
            .d-flex.justify-content-between.align-items-center
                .inner-menu
                    ul.d-flex
                        li 
                            a(href="/") Trang Chủ
                        li(class="sub-menu")
                            -const pathProduct = "/products";
                            a(href=pathProduct) Sản phẩm
                                +sub-menu(layoutProductsCategory, pathProduct)
                                //- ul
                                //-     li
                                //-         a(href="/products/slug-1") Mục 1
                                //-         ul
                                //-             li
                                //-                 a(href="/products/slug-1-1") Mục 1 - 1
                                //-             li
                                //-                 a(href="/products/slug-1-2") Mục 1 - 2
                                //-                 ul
                                //-                     li
                                //-                         a(href="/products/slug-1-2-1") Mục 1 - 2 - 1
                                //-                     li
                                //-                         a(href="/products/slug-1-2-2") Mục 1 - 2 - 2
                                //-     li
                                //-         a(href="/products/slug-2") Mục 2
                        li 
                            a(href="/about") Giới thiêu
                .inner-logo 
                    a(href="/")
                        img(src="/images/PN.png" alt="logo")
                .inner-menu
                    ul.d-flex
                        li
                            form(
                                action="/search"
                                method="GET"
                            )
                                div(class="form-group d-flex mb-0")
                                    input(
                                        type="text"
                                        placeholder="Nhập từ khoá..."
                                        class="form-control"
                                        name="keyword"
                                        value=keyword
                                    )
                                    button(
                                        type="submit"
                                        class="btn btn-primary"
                                    ) Tìm
                        li
                            i(class="fa-solid fa-user")
                            a(href="/products") Tài khoản
                        li
                            i(class="fa-regular fa-heart")
                            a(href="/products") Wishlist           
                        li
                            i(class="fa-solid fa-bag-shopping")
                            a(href="/cart") Cart (#{miniCart ? miniCart.totalQuantity : 0})
