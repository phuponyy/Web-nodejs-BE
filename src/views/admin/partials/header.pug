mixin header()
    header.header 
        .container-fluid
            .row.align-items-center
                .col-3
                    .inner-logo
                        a(href="/admin/dashboard") ADMIN

                .col-9
                    div(class="text-end")
                        a(
                            href=`${prefixAdmin}/my-account`
                            class="btn btn-primary"
                        ) #{user.fullName}
                        a(
                            href=`${prefixAdmin}/auth/logout`
                            class="btn btn-danger ms-2"
                        ) Đăng xuất