mixin pagination(pagination)
    nav
        ul(class="pagination")
            if(pagination.currentPage > 1)
                button(
                    class="page-link"
                    button-pagination=pagination.currentPage-5
                    button-pagTotal=pagination.totalPage
                    ) <<
                if(pagination.totalPage > 5)
                    button(
                        class="page-link"
                        button-pagination=pagination.currentPage-1
                        button-pagTotal=pagination.totalPage
                        ) Trang Trước
            - for (var i = pagination.startPage; i <= pagination.endPage; i++)
                li(class=`page-item ${pagination.currentPage == i ? "active" : ""}`)
                    button(
                        class="page-link"
                        button-pagination=i
                        button-pagTotal=pagination.totalPage
                        ) #{i}

            if(pagination.currentPage < pagination.totalPage)
                button(
                    class="page-link"
                    button-pagination=pagination.currentPage+1
                    button-pagTotal=pagination.totalPage
                    ) Kế tiếp
                button(
                    class="page-link"
                    button-pagination=pagination.currentPage+5
                    button-pagTotal=pagination.totalPage
                    ) >>