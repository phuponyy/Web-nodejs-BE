extends ../../layout/default.pug

block main 
    h1(class="mb-4") #{pageTitle}

    form(
        action=`${prefixAdmin}/my-account/edit?_method=PATCH`
        method="POST"
        enctype="multipart/form-data"
    ) 

        div(class="form-group")
            label(for="fullName") Họ tên *
            input(
                type="text"
                class="form-control"
                id="fullName"
                name="fullName"
                required
                value=user.fullName
            )
        div(class="form-group")
            label(for="email") Email *
            input(
                type="email"
                class="form-control"
                id="email"
                name="email"
                required
                value=user.email
            )
        div(class="form-group")
            label(for="passwrod") Mật khẩu
            input(
                type="password"
                class="form-control"
                id="password"
                name="password"
            )
        div(class="form-group")
            label(for="phoen") Số điện thoại
            input(
                type="text"
                class="form-control"
                id="phone"
                name="phone"
                value=user.phone
            )
        div(
            class="form-group row align-items-center"
            upload-image
        )
            label(for="avatar" class="me-2") Ảnh:
            input(
                type="file"
                class="form-control-file"
                id="avatar"
                name="avatar"
                accept="image/*"
                upload-image-input
            )
            div(
                class=`clear-image-preview ${user.avatar ? '' : 'd-none'}`
                clear-image-preview
            )
                img(
                    src=user.avatar
                    upload-image-preview
                    class="image-preview"
                )
                button(
                    type="button"
                    class=`btn btn-danger upload-image-clear ${user.avatar ? '' : 'd-none'}`
                    upload-image-clear
                )
                    i(class="fas fa-times")

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật

    script(src="/admin/js/script.js") 