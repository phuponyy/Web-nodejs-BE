extends ../../layout/default.pug

block main 
    if(product.title)
        h1(class="mb-4") #{product.title}

    if(product.price)
        div(class="mb-4") Giá: <b>#{product.price}$</b>

    if(product.discountPercentage)
        div(class="mb-4") Giảm giá: <b>#{product.discountPercentage}%</b>

    if(product.stock)
        div(class="mb-4") Số lượng: <b>#{product.stock}</b>

    if(product.thumbnail)
        div(class="mb-4")
            img(src=`${product.thumbnail}` style="width: 100px")
    if (product.status)
        div(class="mb-4 d-flex align-items-center")
            span(class="me-2") Trang thái:
            if (product.status === "active")
                span(class="badge rounded-pill text-bg-success") Hoạt động
            else 
                span(class="badge rounded-pill text-bg-danger") Dừng hoạt động

    if(product.position)
        div(class="mb-4") Vị trí: <b>#{product.position}</b>

    if(product.description)
        div(class="mb-4") mô tả:  <b>!{product.description}</b>

    a(
        href=`${prefixAdmin}/products/edit/${product.id}`
        class="btn btn-primary"
    ) Chỉnh sửa

    script(src="/admin/js/script.js")