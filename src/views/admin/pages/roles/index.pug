extends ../../layout/default

block main 
    h1(class="mb-4") #{pageTitle}

    .card.mb-3
        .card-header Danh sách
        .card-body
            .row
                .col-10 
                .col-2.text-right
                    a(
                        href=`${prefixAdmin}/roles/create`
                        class="btn btn-outline-success"
                    ) + Thêm mới

            table(
                class="table table-hover table-sm"
            )
                thead 
                    tr 
                        th STT 
                        th Nhóm quyền
                        th Mô tả ngắn
                        th Hành động
                tbody
                    if(records.length > 0)
                        each item, index in records
                            tr 
                                td #{index + 1}
                                td(class="text-item") #{item.title}
                                td #{item.description}
                                td
                                    a(
                                        class="btn btn-secondary btn-sm"
                                        href=`${prefixAdmin}/roles/detail/${item.id}`
                                    ) Chi tiết
                                    a(
                                        class="btn btn-warning btn-sm ml-1 ms-2"
                                        href=`${prefixAdmin}/roles/edit/${item.id}`
                                    ) Sửa
                                    button(
                                        class="btn btn-danger btn-sm ml-1 ms-2"
                                        button-delete
                                        data-id=item.id
                                    ) Xoá
                    else
                        table.table.table-hover.table-sm
                            thead 
                                tr 
                                    th STT 
                                    th Nhóm quyền
                                    th Mô tả ngắn
                                    th Hành động
                        h1.text-danger.text-center Không tìm thấy Phân quyền nào!

    form(
        action=""
        method="POST"
        id="form-delete"
        data-path=`${prefixAdmin}/roles/delete`
    )

    script(src="/admin/js/role.js")